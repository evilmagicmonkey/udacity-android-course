                android:text="Queen of Clubs" />

        </RadioGroup>

        <TextView
            style="@style/green_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="What did Cruella De Vil want to do with the Dalmatian puppies?" />

        <RadioGroup
            android:id="@+id/question_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/four_wrong_first"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Train a puppy army" />

            <RadioButton
                android:id="@+id/four_wrong_second"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take them for a walk" />

            <RadioButton
                android:id="@+id/four_wrong_third"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sell them to Scrooge McDuck" />

