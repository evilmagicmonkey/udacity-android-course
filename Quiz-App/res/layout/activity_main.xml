                android:id="@+id/seven_wrong_second"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Become the Sultan" />

            <RadioButton
                android:id="@+id/seven_wrong_third"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Three more wishes" />

        </RadioGroup>

        <TextView
            android:id="@+id/question_eight"
            style="@style/green_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Which 2 of the following are Hades' minions?" />

        <CheckBox
            android:id="@+id/flotsam"
            style="@style/green_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flotsam" />

