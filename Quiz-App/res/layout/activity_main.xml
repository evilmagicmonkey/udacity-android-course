<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E57C2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/green_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Who is Mickey Mouseâ€™s arch-nemesis?" />

        <RadioGroup
            android:id="@+id/question_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/one_wrong_first"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Steve" />

            <RadioButton
                android:id="@+id/one_right"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pete" />

            <RadioButton
                android:id="@+id/one_wrong_second"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dave" />

            <RadioButton
                android:id="@+id/one_wrong_third"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scrooge McDuck" />

        </RadioGroup>


        <TextView
            style="@style/green_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="What is the name of Captain Hook's ship?" />

        <RadioGroup
            android:id="@+id/question_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/two_wrong_first"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Going Merry" />

            <RadioButton
                android:id="@+id/two_wrong_second"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Merry Mariner" />

            <RadioButton
                android:id="@+id/two_wrong_third"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Windy Sailor" />

            <RadioButton
                android:id="@+id/two_right"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Jolly Roger" />

        </RadioGroup>

        <TextView
            style="@style/green_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Who is likely to have you beheaded if you do not follow their rules?" />

        <RadioGroup
            android:id="@+id/question_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/three_right"
                style="@style/green_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Queen of Hearts" />

